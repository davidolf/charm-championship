#!/bin/bash
# This must be renamed to the name of the relation. The goal here is to
# affect any change needed by relationships being formed
# This script should be idempotent.
juju-log $JUJU_REMOTE_UNIT joined

source settings.sh

dbtype=mysql
dbuser=`relation-get user`
dbpassword=`relation-get password`
dbhost=`relation-get host`
dbname=`relation-get database`

cat << EOF > settings.sh
dbtype=$dbtype
dbname=$dbname
dbhost=$dbhost
dbuser=$dbuser
dbpassword=$dbpassword
cachetype=$cachetype
cacheinfo=$cacheinfo
EOF

source ${CHARM_DIR}/hooks/rb-site-install

