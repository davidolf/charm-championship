#!/bin/bash
# This hook runs when the full relation is removed (not just a single member)

source settings.sh

if [ $dbtype = "sqlite3" ]; then
cat << EOF > settings.sh
dbtype=$dbtype
dbname=$dbname
cachetype=file
cacheinfo=/tmp/reviewboard_cache
EOF
else
cat << EOF > settings.sh
dbtype=$dbtype
dbname=$dbname
dbhost=$dbhost
dbuser=$dbuser
dbpassword=$dbpassword
cachetype=file
cacheinfo=/tmp/reviewboard_cache
EOF
fi

source ${CHARM_DIR}/hooks/rb-site-install

